<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1719059069143-1" author="hamdanrijali">
        <createTable tableName="ticket_detail">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ticketdetail"/>
            </column>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="deleted_at" type="DATETIME"/>
            <column name="ticket_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ticket_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="0.00" name="price" type="Decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1719059069143-2" author="hamdanrijali">
        <createIndex tableName="ticket_detail" indexName="idx_ticket_number">
            <column name="ticket_number">
            </column>
        </createIndex>
    </changeSet>
    <changeSet id="1719059069143-3" author="hamdanrijali">
        <createIndex tableName="ticket_detail" indexName="idx_status">
            <column name="status">
            </column>
        </createIndex>
    </changeSet>
    <changeSet id="1719059069143-4" author="hamdanrijali">
        <addUniqueConstraint columnNames="ticket_id, ticket_number"
                             constraintName="ticket_detail_ticket_id_ticket_number"
                             tableName="ticket_detail"/>
    </changeSet>

</databaseChangeLog>